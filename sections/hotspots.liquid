{{ 'component-hotspot-slide.css' | asset_url | stylesheet_tag }}
{{ 'component-hotspot.css' | asset_url | stylesheet_tag }}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

{% capture slider_config %}
{
  "slidesPerView": 1,
  "speed": 700,
  "loop": true,
  "watchOverflow": true,
  {% if section.blocks.size > 1 %}
  "navigation": {
    "nextEl": ".hsw-nav--next",
    "prevEl": ".hsw-nav--prev"
  },
  {% endif %}
  "keyboard": { "enabled": true },
  "autoplay": false
}
{% endcapture %}

<section
  id="HotspotsSlider-{{ section.id }}"
  class="hsw color-{{ section.settings.color_scheme }} section-{{ section.id }}--padding"
  style="
    --hsw-bg: {{ section.settings.section_bg }};
    --hsw-title: {{ section.settings.title_color }};
    --hsw-arrow: {{ section.settings.arrow_color }};
    --hsw-arrow-bg: {{ section.settings.arrow_bg }};
  "
>
  {% unless section.settings.heading == blank %}
    <h2 class="hsw__heading">{{ section.settings.heading }}</h2>
  {% endunless %}

  <div
    class="hsw__slider swiper"
    {% render 'slider-attribute', config: slider_config, is_observable: true %}
  >
    <div class="swiper-wrapper">
      {% content_for 'blocks' %}
    </div>

    {% if section.blocks.size > 1 %}
      <div class="hsw__nav">
        <button class="hsw-nav hsw-nav--prev" aria-label="Previous">
          {{ 'icon-hotspots-arrow.svg' | inline_asset_content }}
        </button>
        <button class="hsw-nav  hsw-nav--next" aria-label="Next">
          {{ 'icon-hotspots-arrow.svg' | inline_asset_content }}
        </button>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hotspots Slider",
  "class": "section__hotspots-slider",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "NO BULLSHIT INSIDE" },

    { "type": "color", "id": "section_bg", "label": "Section background", "default": "#F6F7F9" },
    { "type": "color", "id": "title_color", "label": "Title color", "default": "#111111" },
    { "type": "color", "id": "arrow_color", "label": "Arrows icon color", "default": "#111111" },
    { "type": "color", "id": "arrow_bg", "label": "Arrows background", "default": "#FFFFFF" },
    { "type": "color", "id": "hover_color", "label": "Hotspot hover color", "default": "#FFFFFF" },

    { "type": "color_scheme", "id": "color_scheme", "label": "t:sections.all.colors.label", "default": "scheme-1" },

    { "type": "paragraph", "content": "Space between template sections(Desktop)" },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },

    { "type": "paragraph", "content": "Space between template sections(Mobile)" },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 0
    }
  ],

  "blocks": [
    { "type": "hotspot-slide" } // recommend our slide block in picker
  ],

  "presets": [{ "name": "Hotspots Slider (Theme blocks)" }]
}
{% endschema %}
